    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Freeman&family=Oswald:wght@500&display=swap" rel="stylesheet">
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/tilt.js@1.2.1"></script>
<script>
document.addEventListener("DOMContentLoaded", function() {
    const heroText = document.querySelector(".hero-image");
    Tilt.init(heroText, {
        maxTilt: 20,
        perspective: 1000, 
        scale: 1.05 
    });
});

document.addEventListener("scroll", function() {
    const section = document.querySelector('.service-section');
    const viewportHeight = window.innerHeight; // Definiere viewportHeight hier
    const sectionStart = section.offsetTop - viewportHeight;
    const sectionEnd = sectionStart + section.offsetHeight;
    const scrollPosition = window.pageYOffset;

    let skewValue = 0;

    if (scrollPosition > sectionStart && scrollPosition < sectionEnd) {
        const distanceIntoSection = scrollPosition - sectionStart;
        const percentage = Math.min(1, distanceIntoSection / section.offsetHeight);
        skewValue = 10 - (percentage * 10); // Der Wert '4' ist der maximale Skew-Winkel
    } else if (scrollPosition <= sectionStart) {
        skewValue = 10; // Maximaler Skew-Winkel, wenn oberhalb der Sektion
    }

    section.style.transform = `skewY(-${skewValue}deg)`;
});
</script>
{% endblock %}

